{
  "name": "js.foresight",
  "version": "3.4.0",
  "description": "Predicts where users will click based on mouse movement, keyboard navigation, and scroll behavior. Includes touch device support. Triggers callbacks before interactions happen to enable prefetching and faster UI responses. Works with any framework.",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "build": "tsup --sourcemap",
    "build:prod": "tsup",
    "dev": "tsup --sourcemap --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "prepublishOnly": "pnpm test:run && pnpm build:prod"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "homepage": "https://foresightjs.com/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spaansba/ForesightJS"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "javascript-prefetch",
    "smart-prefetch",
    "fast-prefetch",
    "interaction-prediction",
    "mobile-prefetch",
    "mouse-trajectory",
    "element-hitslop",
    "foresight",
    "interaction-prediction",
    "cursor-prediction",
    "vanilla-javascript",
    "prefetching",
    "keyboard-tracking",
    "keyboard-prefetching",
    "tab-prefetching"
  ],
  "author": "Bart Spaans",
  "license": "MIT",
  "llms": "https://foresightjs.com/llms.txt",
  "llmsFull": "https://foresightjs.com/llms-full.txt",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "4.0.16",
    "@vitest/ui": "^4.0.9",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.4.0",
    "tslib": "^2.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.9"
  },
  "dependencies": {
    "position-observer": "^1.0.3",
    "tabbable": "^6.3.0"
  }
}
